generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql" 
    url      = env("DATABASE_URL")
}


model User {
    id    Int     @id @default(autoincrement())
    
    // force email to be unique
    email String  @unique
    password String
    firstName String?
    lastName String?
    title String?
    organization String?

    // these default to the current time
    dateCreated DateTime? @default(now())
    dateUpdated DateTime? @updatedAt

    @@map("users")
}
